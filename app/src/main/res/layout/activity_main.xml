<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding = "16dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Display Bluetooth connectivity Status-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/name_bt"
        android:layout_centerHorizontal="true"
        android:textStyle = "bold"
        android:textSize="20sp"/>
    <!--Bluetooth image-->
    <ImageView
        android:id="@+id/search_bt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/name_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/ic_action_search"/>
    <!--Button: Turn on-->
    <Button
        android:id="@+id/turn_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/turn_on"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/search_bt"
        android:minWidth="200dp"/>
    <!--Button: Turn off-->
    <Button
        android:id="@+id/turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/turn_off"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/turn_on"
        android:minWidth="200dp"/>
    <!--Button: Discoverable-->
    <Button
        android:id="@+id/discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/discoverable"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/turn_off"
        android:minWidth="200dp"/>
    <!--Button: Get paired devices-->
    <Button
        android:id="@+id/get_paired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/get_paired_devices"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/discoverable"
        android:minWidth="200dp"/>
    <!--text view: Get paired devices-->
    <TextView
        android:id="@+id/pairedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/get_paired"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>